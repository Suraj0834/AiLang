{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib/typescript",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react-native",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["react-native", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "example"]
}
